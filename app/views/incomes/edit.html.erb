<div style="width: 100vw; height: 50px;"></div>

<div class="form-wrapper">
    <h2>Update Income</h2>
    <%= link_to 'Delete Income', income_path(@income), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'delete' %>
    <br />
    <%= form_for @income do |f| %>
        <div class="field">
            <%= f.label :value %>
            <%= f.number_field :value %>
        </div>
        <br />
        <div class="field">
            <%= f.label :category_id %>
            <%= f.collection_select(:category_id, @categories, :id, :name) %>
            <%= link_to "New", new_category_path %>
        </div>
        <br />
        <div class="field">
            <%= f.label :date %>
            <%= f.date_field :date, :value => Date.today.strftime('%Y-%m-%d') %>
        </div>
        <br />
        <div class="actions">
            <%= f.submit "Update" %>
        </div>
    <% end %>
</div>